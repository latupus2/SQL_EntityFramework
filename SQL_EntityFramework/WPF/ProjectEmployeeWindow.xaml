<Window x:Class="SQL_EntityFramework.WPF.ProjectEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQL_EntityFramework.WPF"
        mc:Ignorable="d"
        Title="ProjectEmployee" Height="482" Width="860"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Информация о сотрудниках" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Руководитель проекта:" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="gridManager" ColumnWidth="*" IsReadOnly="True" Margin="0,80,321,286" AutoGeneratedColumns="gridManager_AutoGeneratedColumns" SelectionChanged="gridManager_SelectionChanged"/>
        <Label Content="Сотрудники:" HorizontalAlignment="Left" Margin="10,180,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="gridEmployee" ColumnWidth="*" IsReadOnly="True" Margin="0,211,321,10" AutoGeneratedColumns="gridEmployee_AutoGeneratedColumns" SelectionChanged="gridEmployee_SelectionChanged"/>
        <Button x:Name="ChangeManager" Content="-" HorizontalAlignment="Left" Margin="553,124,0,0" VerticalAlignment="Top" Height="33" Width="279" Click="ChangeManager_Click"/>
        <Button x:Name="addEmployee" Content="Добавить сотрудника" HorizontalAlignment="Left" Margin="553,80,0,0" VerticalAlignment="Top" Height="33" Width="137" Click="addEmployee_Click"/>
        <Button x:Name="deleteEmployee" Content="Удалить сотрудника" HorizontalAlignment="Left" Margin="695,80,0,0" VerticalAlignment="Top" Height="33" Width="137" Click="deleteEmployee_Click"/>
        <Button x:Name="buttonBack" Content="Назад" HorizontalAlignment="Left" Margin="553,376,0,0" VerticalAlignment="Top" Height="33" Width="137" Click="buttonBack_Click"/>
    </Grid>
</Window>
